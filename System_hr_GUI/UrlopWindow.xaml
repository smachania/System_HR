<Window x:Class="System_hr_GUI.UrlopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System_hr_GUI"
        mc:Ignorable="d"
        Title="Wniosek o Urlop" Height="500" Width="500" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock x:Name="TxtPracownikDane" FontSize="16" FontWeight="Bold"/>
            <Separator Margin="0,5"/>
        </StackPanel>

        <GroupBox Grid.Row="1" Header="Stan urlopu" Margin="0,0,0,15" Padding="10">
            <UniformGrid Columns="2">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Pozostało dni:"/>
                    <TextBlock x:Name="LblPozostalo" FontSize="20" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Wykorzystano:"/>
                    <TextBlock x:Name="LblWykorzystano" FontSize="20" FontWeight="Bold"/>
                </StackPanel>
            </UniformGrid>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="Termin urlopu" Padding="15">
            <StackPanel>
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Od:" VerticalAlignment="Center" Width="30"/>
                    <DatePicker x:Name="DpStart" Grid.Column="1"/>
                </Grid>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Do:" VerticalAlignment="Center" Width="30"/>
                    <DatePicker x:Name="DpEnd" Grid.Column="1"/>
                </Grid>
            </StackPanel>
        </GroupBox>

        <TextBlock Grid.Row="4" x:Name="LblBladUrlop" Foreground="Red" Margin="0,5" TextWrapping="Wrap" FontSize="15"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="BtnAkceptuj" Content="Akceptuj" Width="100" Height="30" Margin="10" Click="BtnAkceptuj_Click"/>
            <Button x:Name="BtnZamknij" Content="Zamknij" Width="100" Height="30" Margin="10" IsCancel="True" Click="BtnZamknij_Click"/>
        </StackPanel>
    </Grid>
</Window>