<Window x:Class="System_hr_GUI.SzczegolyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System_hr_GUI"
        mc:Ignorable="d"
        Title="Szczegóły Pracownika" Height="500" Width="500" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <TabItem Header="Dane osobowe">
                <StackPanel Margin="20">
                    <GroupBox Header="Informacje podstawowe" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Imię i Nazwisko:"/>
                            <TextBlock x:Name="LblPelneNazwisko" FontSize="15" Margin="0,0,0,20"/>

                            <TextBlock Text="Płeć:"/>
                            <TextBlock x:Name="LblPlec" Margin="0,0,0,20"/>

                            <TextBlock Text="Status zatrudnienia:"/>
                            <TextBlock x:Name="LblStatus"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>

            <TabItem Header="Umowa i Wynagrodzenie">
                <StackPanel Margin="10">
                    <GroupBox Header="Szczegóły kontraktu" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Typ umowy:"/>
                            <TextBlock x:Name="LblTypUmowy" Margin="0,0,0,20"/>

                            <TextBlock Text="Parametry:"/>
                            <TextBlock x:Name="LblSzczegolyFinansowe" Margin="0,0,0,20"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Podsumowanie finansowe" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Wynagrodzenie końcowe:"/>
                            <TextBlock x:Name="LblWyliczonaWyplata" FontSize="20" Foreground="Green"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BtnZamknij" Content="Zamknij" Width="100" Height="30" Margin="10" IsCancel="True" Click="BtnZamknij_Click"/>
        </StackPanel>
    </Grid>
</Window>