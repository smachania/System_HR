<Window x:Class="System_hr_GUI.RaportyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System_hr_GUI"
        mc:Ignorable="d"
        Title="Analityka i Raporty HR" Height="500" Width="1000" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="ANALIZA SZCZEGÓŁOWA DZIAŁU" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="Wybierz dział do analizy:" VerticalAlignment="Center" FontSize="14" Margin="0,0,10,0"/>
            <ComboBox x:Name="CbWyborDzialu" Width="200" Height="30" SelectionChanged="CbWyborDzialu_SelectionChanged"/>
        </StackPanel>

        <UniformGrid Grid.Row="2" Columns="3" Margin="0,0,0,20">
            <GroupBox Header="Budżet Działu" Padding="10">
                <TextBlock x:Name="LblSumaPlacDzialu" FontSize="20" FontWeight="Bold"  HorizontalAlignment="Center"/>
            </GroupBox>
            <GroupBox Header="Średnia w Dziale" Padding="10">
                <TextBlock x:Name="LblSredniaDzialu" FontSize="20" FontWeight="Bold"  HorizontalAlignment="Center"/>
            </GroupBox>
            <GroupBox Header="Liczba Etatów" Padding="10">
                <TextBlock x:Name="LblLiczbaPracownikowDzialu" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            </GroupBox>
        </UniformGrid>

        <GroupBox Grid.Row="3" Header="Pracownicy przypisani do działu" Margin="0,0,0,10">
            <DataGrid x:Name="DgPracownicyDzialu" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Imię" Binding="{Binding Imie}" Width="*"/>
                    <DataGridTextColumn Header="Nazwisko" Binding="{Binding Nazwisko}" Width="*"/>
                    <DataGridTextColumn Header="Stanowisko" Binding="{Binding Stanowisko}" Width="120"/>
                    <DataGridTextColumn Header="Wynagrodzenie" Binding="{Binding Wynagrodzenie}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BtnZamknij" Content="Zamknij" Width="100" Height="30" Margin="10" IsCancel="True" Click="BtnZamknij_Click"/>
        </StackPanel>
    </Grid>
</Window>