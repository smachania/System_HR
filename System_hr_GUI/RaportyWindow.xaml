<Window x:Class="System_hr_GUI.RaportyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System_hr_GUI"
        mc:Ignorable="d"
        Title="Analityka i Raporty HR" Height="500" Width="1000" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="TOP 5 NAJDROŻSZYCH PRACOWNIKÓW" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <DataGrid x:Name="DgTopPracownicy" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" SelectionMode="Single" Margin="0,0,0,20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Pracownik" Binding="{Binding PelneNazwisko}" Width="*"/>
                <DataGridTextColumn Header="Dział" Binding="{Binding Dzial}" Width="150"/>
                <DataGridTextColumn Header="Stanowisko" Binding="{Binding Stanowisko}" Width="150"/>
                <DataGridTextColumn Header="Całkowity Koszt" Binding="{Binding KosztCalkowity}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" HorizontalAlignment="Left" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Całkowity koszt płac: " FontSize="15"/>
                <TextBlock x:Name="LblKosztCalkowity" FontSize="15" Margin="10,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Średnia wypłata: " FontSize="15"/>
                <TextBlock x:Name="LblSredniaWyplata" FontSize="15" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BtnZamknij" Content="Zamknij" Width="100" Height="30" Margin="20" IsCancel="True" Click="BtnZamknij_Click"/>
        </StackPanel>
    </Grid>
</Window>