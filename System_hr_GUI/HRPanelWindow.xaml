<Window x:Class="System_hr_GUI.HRPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System_hr_GUI"
        mc:Ignorable="d"
        Title="System HR - Panel Zarządzania" Height="500" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Plik">
                <MenuItem Header="Wczytaj bazę" Click="MenuWczytaj_Click"/>
                <MenuItem Header="Zapisz bazę" Click="MenuZapisz_Click"/>
                <Separator/>
                <MenuItem Header="Wyjście" Click="MenuWyjscie_Click"/>
            </MenuItem>
            <MenuItem Header="Analiza" Click="BtnRaporty_Click"/>
        </Menu>

        <TextBlock Grid.Row="1" Text="REJESTR PRACOWNIKÓW" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <DataGrid x:Name="DgPracownicy" Grid.Row="2" Margin="20" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Imię" Binding="{Binding Imie}" Width="*"/>
                <DataGridTextColumn Header="Nazwisko" Binding="{Binding Nazwisko}" Width="*"/>
                <DataGridTextColumn Header="Dział" Binding="{Binding Dzial}" Width="150"/>
                <DataGridTextColumn Header="Wynagrodzenie" Binding="{Binding Wynagrodzenie}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="BtnDodaj" Content="Zatrudnij" Width="100" Height="30" Margin="10" Click="BtnDodaj_Click"/>
            <Button x:Name="BtnEdytuj" Content="Edytuj" Width="100" Height="30" Margin="10" Click="BtnEdytuj_Click"/>
            <Button x:Name="BtnUrlop" Content="Urlop" Width="100" Height="30" Margin="10" Click="BtnUrlop_Click"/>
            <Button x:Name="BtnZwolnij" Content="Zwolnij" Width="100" Height="30" Margin="10" Click="BtnZwolnij_Click"/>
            <Button x:Name="BtnSzczegoly" Content="Szczegóły" Width="100" Height="30" Margin="10" Click="BtnSzczegoly_Click"/>
        </StackPanel>
    </Grid>
</Window>
