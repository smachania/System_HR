<Window x:Class="System_hr_GUI.OsobaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System_hr_GUI"
        mc:Ignorable="d"
        Title="Zatrudnij Pracownika" Height="500" Width="500" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,5">
            <TextBlock Text="Imię:" FontSize="15"/>
            <TextBox x:Name="TxtImie" Height="25"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Margin="0,5">
            <TextBlock Text="Nazwisko:" FontSize="15"/>
            <TextBox x:Name="TxtNazwisko" Height="25"/>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Margin="0,5">
            <TextBlock Text="Dział:" FontSize="15"/>
            <ComboBox x:Name="CbDzial" Height="25"/>
        </StackPanel>
        
        <StackPanel Grid.Row="3" Margin="0,5">
            <TextBlock Text="Typ umowy:" FontSize="15"/>
            <ComboBox x:Name="CbTypUmowy" Height="25"/>
        </StackPanel>

        <GroupBox Grid.Row="4" Header="Finanse" Padding="10" Margin="0,10">
            <StackPanel>
                <TextBlock Text="Kwota:"/>
                <TextBox x:Name="TxtKwotaFinansowa" Height="25"/>
            </StackPanel>
        </GroupBox>

        <TextBlock Grid.Row="5" x:Name="LblBlad" Foreground="Red" FontSize="15"/> 

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BtnZapisz" Content="Zapisz" Width="100" Height="30" Margin="20" Click="BtnZapisz_Click"/>
            <Button x:Name="BtnZamknij" Content="Zamknij" Width="100" Height="30" Margin="20" IsCancel="True" Click="BtnZamknij_Click"/>
        </StackPanel>
    </Grid>
</Window>
